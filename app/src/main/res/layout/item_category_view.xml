<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/margin_item_cardview_8dp"
    android:layout_gravity="center">

<androidx.constraintlayout.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/imageview_rvitem_categorytile"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:scaleType="fitCenter"
        tools:src="@drawable/electrician"
        android:contentDescription="@string/item_content_description"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/textview_rvitem_categoryname"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:padding="@dimen/padding_item_textview_4dp"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
        app:layout_constraintEnd_toEndOf="@+id/imageview_rvitem_categorytile"
        app:layout_constraintStart_toStartOf="@id/imageview_rvitem_categorytile"
        app:layout_constraintTop_toBottomOf="@id/imageview_rvitem_categorytile"
        tools:text="@string/electronics" />

</androidx.constraintlayout.ConstraintLayout>
</android.support.v7.widget.CardView>